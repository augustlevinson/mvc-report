        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/mvc.png') }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('blackjack') }}
