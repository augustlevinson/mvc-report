            <a href="{{ path('blackjack_about') }}">About</a>
            <a href="{{ path('session') }}">Session</a>
        </nav>
        </header>
        {% block body %}
        {% endblock %}
        <footer>
            <a href="{{ path('session') }}">Session</a>
            <p>&copy; 2024 August Levinson</p>
        </footer>
    </body>
</html>
