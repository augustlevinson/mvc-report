FUNCTION hitOrStand()
  Ask player to choose between hit or stand
  IF playerChoice == hit THEN
    playerHand draws 1 from DeckOfCards
    Display playerHand value
    IF playerHand > 21 THEN
      Display "Player is bust. Bank wins"
      End game
    ELSE
      Call hitOrStand()
    ENDIF
  ELSE IF playerChoice == stand THEN
    WHILE bankHand < 21 DO
      bankHand draws 1 from DeckOfCards
    ENDWHILE
    IF bankHand == 21 THEN
      Display "Bank hits 21. Bank wins"
      End game
    ELSEIF bankHand > 21 THEN
      Display "Bank is bust. Player wins"
      End game
    ELSE
